@model List<AttendanceSystem.Models.Course>

@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="container">
    <h2>My Courses</h2>

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-text">@course.Description</p>
                        <p class="card-text"><small class="text-muted">Day: @course.ClassDay</small></p>
                        <p class="card-text"><small class="text-muted">Time: @course.ClassStartTime?.ToString("hh\\:mm") - @course.ClassEndTime?.ToString("hh\\:mm")</small></p>
                        <a asp-action="CourseDetails" asp-route-id="@course.CourseId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>